{
    "printWidth": 140,
    "tabWidth": 4,
    "useTabs": true,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "crlf",
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "printWidth": 145
            }
        },
        {
            "files": "*.scss",
            "options": {
				"singleQuote": false
			}
        }
    ]
}
